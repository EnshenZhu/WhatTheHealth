<div class="medium-8 columns" style="background-color:#f1f1f1;">      
<h1>Patient Appointments</h1>
<div class="appointments" id="appointments">
  <table class="patient-appointments .table">
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Time</th>
      <th scope="col">Doctor Name</th>
      <th scope="col">Symptoms</th>
      <th scope="col">Status</th>
      <th scope="col">Wait Time (Minutes)</th>
      <th scope="col">Actions:</th>
    </tr>
    {{#each appointments as |apt|}}
      <tr>
        <td>{{this.date}}</td>
        <td>{{this.time}}</td>
        <td>{{this.doctorName}}</td>
        <td>{{this.symptoms}}</td>
        <td>{{this.status}}</td>
        <td>{{this.waitTime}}</td>
        <td><button data-targ="theButton" data-aptid="{{this.patientID}}" id="{{this.id}}">Check-In</button></td>
        <td><button>Cancel</button></td>
      </tr>
    {{/each}}
  </table>
</div>

<script>
  $('#appointments').click(function(e) {  
    if(e.target.dataset.targ === 'theButton'){
      console.log(e)
      var url = window.location.origin + '/videoCall.html?id=' + e.target.dataset.aptid
      var win = window.open(url, '_blank');
      if (win) {
        //Browser has allowed it to be opened
        win.focus();
        var url = '/patient/appointments/waitingroom'
        document.location.replace(url);
      } else {
        //Browser has blocked it
        alert('Please allow popups for this website in order to access the call');
      }
    }
});
</script>