<div class="custom-container">
        <div class="jumbotron">
            <h3 class="text-center text-primary">Login Form</h3>
            <br>
            {{#if success}}
            <div class="alert alert-success alert-dismissible fade show">
                <strong>{{success}}</strong>
                <button class="close" data-dismiss="alert"><span>&times;</span></button>
            </div>
            {{/if}}
            {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show">
                <strong>{{error}}</strong>
                <button class="close" data-dismiss="alert"><span>&times;</span></button>
            </div>
            {{/if}}

            <form action="" id="login" method="POST">
                <div class="form-group">
                    <label for="username-lbl">Username<span class="text-danger">*</span></label>
                    <input type="username" class="form-control" name="username" id="username-input" placeholder="Enter your username">
                </div>
                <div class="form-group">
                    <label for="password">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="password" id="password-input" placeholder="Enter Your Password">
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" id="login-btn" class="btn btn-info btn-block">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            New user? Register <a href="/user">here</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="/javascript/login.js"></script>